@model StoreEventModel;

@if (Model.Events.Count() >= 1)
{
    <div class="Text_UnderLine">
        @if (Model.CurrentEvents > 0)
        {
            <h2 id="CurrentEvents" class="Side_By_Side_Data  BitFont_Tight "> @Model.CurrentEvents</h2>
            @if (Model.CurrentEvents == 1)
            {
                <h3 class="Side_By_Side_Data BitFont_Tight">&nbsp;:Event</h3>
            }
            else
            {<h3 class="Side_By_Side_Data BitFont_Tight">&nbsp;:Events</h3>
            }

        }
    </div>
    <div id="CurrentParts " class="Text_UnderLine">
        <h3 id="curPartCount" class="Side_By_Side_Data BitFont_Tight ">@Model.CurrentPartcipants</h3>
        @if (@Model.CurrentPartcipants == 1)
        {
            <h4 class="Side_By_Side_Data BitFont_Tight">&nbsp;: Current Attendee</h4>
        }
        else
        {
            <h4 class="Side_By_Side_Data BitFont_Tight">&nbsp;: Current Attendees</h4>
        }

    </div>
    <div id="TotalParts" class="Text_UnderLine">
        <h3 id="upPartCount" class="Side_By_Side_Data BitFont_Tight">@Model.UpcommingParticipants</h3>
        @if (Model.UpcommingParticipants == 1)
        {
            <h4 class="Side_By_Side_Data BitFont_Tight">&nbsp;: Upcoming Attendee</h4>
        }
        else
        {
            <h4 class="Side_By_Side_Data BitFont_Tight">&nbsp;: Upcoming Attendees</h4>
        }

    </div>
}
else
{
    <div id="CurrentEventsWrapper" class="Text_UnderLine" hidden>
        <h2 id="CurrentEvents" class="Side_By_Side_Data  BitFont_Tight ">0</h2>
        <h3 class="Side_By_Side_Data BitFont_Tight">&nbsp;:Event</h3>
    </div>
    <div id="CurrentParts" class="Text_UnderLine" hidden>
        <h3 id="curPartCount" class="Side_By_Side_Data BitFont_Tight ">0</h3>
        <h4 class="Side_By_Side_Data BitFont_Tight">&nbsp;: Current Attendees</h4>
    </div>
    <div id="TotalParts" class="Text_UnderLine" hidden>
        <h3 id="upPartCount" class="Side_By_Side_Data BitFont_Tight">0</h3>
        <h4 class="Side_By_Side_Data BitFont_Tight">&nbsp;: Upcoming Attendees</h4>
    </div>
    <h3 id="NoCurrent" class="BitFont_Large">There are no events</h3>
}